{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:react/recommended",
    "plugin:boundaries/recommended"
  ],
  "plugins": ["react", "boundaries"],
  "settings": {
    "react": {
      "version": "detect"
    },
    "boundaries/include": ["./**/*"],
    "boundaries/elements": [
      {
        "mode": "full",
        "type": "app",
        "pattern": "app/*"
      },
      {
        "mode": "full",
        "type": "components",
        "pattern": "components/*"
      },
      {
        "mode": "full",
        "type": "features",
        "pattern": "features/*"
      }
    ]
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "boundaries/no-unknown": "warn",
    "boundaries/no-unknown-files": "warn",
    "boundaries/element-types": [
      "warn",
      {
        "default": "disallow",
        "rules": [
          {
            "from": "components",
            "allow": ["components", "features"]
          },
          {
            "from": "features",
            "allow": ["features"]
          },
          {
            "from": "app",
            "allow": ["app"]
          }
        ]
      }
    ]
  }
}
